<div class="text-center mb-5">
  <h1>Sign in as Transporter</h1>
</div>

<div class="row">
  <div class="col-sm-8 offset-sm-2">
    
    <%= form_with(model: @transporter, local: true) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
    
      <div class="form-group row">
        <%= f.label :name, 'Your account name', class: 'col-sm-3' %>
        <%= f.text_field :name, class: 'form-control col-sm-9' %>
      </div>
      
      <div class="form-group row">
        <%= f.label :email, 'Email address', class: 'col-sm-3' %>
        <%= f.email_field :email, class: 'form-control col-sm-9' %>
        <%= f.email_field :email_confirmation, class: 'form-control col-sm-9 offset-sm-3 mt-3' %>
        <p class="col-sm-12 text-right">Please rewrite your email address for confirmation</p>
      </div>
      
      <div class="form-group row">
        <%= f.label :password, 'Password', class: 'col-sm-3' %>
        <%= f.password_field :password, class: 'form-control col-sm-9' %>
        <%= f.password_field :password_confirmation, class: 'form-control col-sm-9 offset-sm-3 mt-3' %>
        <p class="col-sm-12 text-right">Please rewrite your password for confirmation</p>
      </div>
      
      <%= f.submit 'Sign in', class: 'btn btn-primary col-sm-6 offset-sm-3' %>
    <% end %>
  </div>
</div>
