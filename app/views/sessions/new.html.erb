<div class="text-center mb-5">
  <h1>Log in</h1>
</div>

<div class="row">
  <div class="col-sm-8 offset-sm-2">
    
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
    
      
      <div class="form-group row">
        <%= f.label :email, 'Email address', class: 'col-sm-3' %>
        <%= f.email_field :email, value: params[:email], class: 'form-control col-sm-9' %>
      </div>
      
      <div class="form-group row">
        <%= f.label :password, 'Password', class: 'col-sm-3' %>
        <%= f.password_field :password, value: params[:password], class: 'form-control col-sm-9' %>
      </div>
      
      <%= f.submit 'Log in', class: 'btn btn-secondary col-sm-6 offset-sm-3' %>
    <% end %>
  </div>
</div>
